<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CatchMeIfYouCan.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CatchMeIfYouCan.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="CatchMeIfYouCan"
        Width="800" Height="600">
  <Design.DataContext>
    <vm:MainWindowViewModel />
  </Design.DataContext>
  <Grid RowDefinitions="*,Auto">
    <Canvas Grid.Row="0" Margin="0" Name="Canvas" Background="WhiteSmoke" />
    <Button Grid.Row="1" Margin="6" HorizontalAlignment="Center" Click="Button_OnClick" Content="Add" />
  </Grid>
</Window>
